    <LinearLayout 
        android:orientation="vertical" 
        android:background="@drawable/prv_card_background_selectable" 
        android:padding="24.0dip" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginHorizontal="24dp" 
        android:layout_marginVertical="12dp" 
        xmlns:android="http://schemas.android.com/apk/res/android" 
        xmlns:app="http://schemas.android.com/apk/res-auto">
         
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_marginBottom="24.0dip">
    
    <ImageView 
        android:id="@+id/prv_monet" 
        android:layout_width="0.0dip" 
        android:layout_height="wrap_content" 
        android:src="@drawable/theme_preview_monet" 
        android:adjustViewBounds="true" 
        android:layout_weight="1.0" 
        app:cardCornerRadius="16.0dip" />

        <Space 
            android:layout_width="24.0dip" 
            android:layout_height="wrap_content" />

    <ImageView 
        android:id="@+id/prv_default" 
        android:layout_width="0.0dip" 
        android:layout_height="wrap_content" 
        android:src="@drawable/theme_preview_default_disabled" 
        android:adjustViewBounds="true" 
        android:layout_weight="1.0" 
        app:cardCornerRadius="16.0dip" />
        
    </LinearLayout>
        
    <androidx.cardview.widget.CardView 
        android:textColor="@color/x_textColorPrimary" 
        android:id="@+id/prv_below" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="56.0dip" 
        android:foreground="?android:selectableItemBackground" 
        app:cardBackgroundColor="@color/x_colorOnCardBackground" 
        app:cardCornerRadius="16.0dip" 
        app:cardElevation="0.0dip">
        
        <LinearLayout 
            android:gravity="center" 
            android:layout_gravity="center" 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent">
            
            <TextView 
                android:textColor="@color/x_textColorPrimary" 
                android:textStyle="bold" 
                android:layout_gravity="center_vertical" 
                android:id="@+id/prv_below_text" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="AfterLife NeverDie" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>